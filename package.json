  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --ignore-path ./.gitignore --write "
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "bun run remove-env-values && bunx lint-staged"
  }
